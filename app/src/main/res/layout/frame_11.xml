<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    android:layout_height="match_parent"
    android:gravity="center"
    android:layout_centerHorizontal="true"
    android:orientation="horizontal"
    android:background="@drawable/edge">

    <!--homeviewpage에 들어가는 프레임 레이아웃-->
    <RelativeLayout
        android:id="@+id/L_1"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/detailviewitem_profile_image"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_margin="5.5dp"
            android:src="@drawable/baseline_record_voice_over_24"/>

        <TextView
            android:id="@+id/detailviewitem_profile_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="No.1 user"
            android:textColor="@color/black"
            android:layout_toRightOf="@id/detailviewitem_profile_image"/>


        <ImageView
            android:id="@+id/detailviewitem_profile_imageview_content"
            android:layout_width="100dp"
            android:layout_height="90dp"
            android:layout_below="@id/detailviewitem_profile_image"
            android:layout_margin="5dp"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:src="@drawable/cafe_3" />

        <ImageView
            android:id="@+id/detailviewitem_profile_imageview_content2"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_below="@id/detailviewitem_profile_image"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            android:layout_toRightOf="@id/detailviewitem_profile_imageview_content"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:src="@drawable/cafe_4" />


        <ImageView
            android:id="@+id/detailviewitem_favrite_imageview"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:textColor="@color/black"
            android:layout_below="@id/detailviewitem_profile_imageview_content"
            android:layout_marginLeft="2dp"
            android:src="@drawable/ic_baseline_favorite_border_24" />


        <ImageView
            android:id="@+id/detailviewitem_comment_imageview"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="5dp"
            android:textColor="@color/black"
            android:layout_below="@id/detailviewitem_profile_imageview_content"
            android:layout_toRightOf="@id/detailviewitem_favrite_imageview"
            android:src="@drawable/ic_baseline_chat_24" />
    </RelativeLayout>

</LinearLayout>